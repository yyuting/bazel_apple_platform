platforms:
  # Maps "--platforms=//:platform_ios" to "--apple_platform_type=ios --ios_multi_cpus=arm64 --cpu=ios_arm64".
  //:platform_ios
    --ios_multi_cpus=arm64
    --apple_platform_type=ios
    --cpu=ios_arm64

flags:
  # Maps "--apple_platform_type=ios --cpu=ios_arm64 --ios_multi_cpus=arm64" to "--platforms=//:platform_ios".
  --ios_multi_cpus=arm64
  --cpu=ios_arm64
  --apple_platform_type=ios
    //:platform_ios
